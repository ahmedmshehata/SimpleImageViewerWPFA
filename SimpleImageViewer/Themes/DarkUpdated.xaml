<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DarkUpdated theme: high-contrast and improved control styles -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF121212" />
    <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="SubtleTextBrush" Color="#FFBDBDBD" />
    <SolidColorBrush x:Key="AccentBrush" Color="#FF3A84FF" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FF1F1F1F" />
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#FF3A3A3A" />
    <SolidColorBrush x:Key="OverlayBrush" Color="#80000000" />

    <!-- Window defaults -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- Button -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="6,3" />
        <Setter Property="Margin" Value="2" />
    </Style>

    <!-- ProgressBar -->
    <Style TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}" />
        <Setter Property="Height" Value="16" />
    </Style>

    <!-- MenuItem -->
    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
    </Style>

</ResourceDictionary>